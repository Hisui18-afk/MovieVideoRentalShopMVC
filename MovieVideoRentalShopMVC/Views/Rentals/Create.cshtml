@model MovieVideoRentalShopMVC.Models.Rental

@{
    ViewData["Title"] = "Index";
}

<h2>Create Rental</h2>

<form asp-action="Create">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                
                <h2>Create Rental</h2>

                <form asp-action="Create">
                    <div class="form-group">
                        <label asp-for="CustomerID"></label>
                        <select asp-for="CustomerID" asp-items="ViewBag.Customer" class="form-control">
                            <option value="">-- Select Customer --</option>
                        </select>
                    </div>


                    <div class="form-group">
                        <label asp-for="RentDate" class="control-label"></label>
                        <input asp-for="RentDate" class="form-control datepicker" />
                    </div>

                    <div class="form-group">
                        <label asp-for="ReturnDate" class="control-label"></label>
                        <input asp-for="ReturnDate" class="form-control datepicker" />
                    </div>

                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-success">Save</button>
                        <a asp-action="Index" class="btn btn-danger">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            $(".datepicker").attr("type", "date");
        });
    </script>
}
